<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDimWhite"
    android:orientation="vertical"
    android:theme="@style/DialogTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundDimWhite"
        android:paddingBottom="@dimen/dialog_padding_bottom"
        android:paddingLeft="@dimen/dialog_padding_left"
        android:paddingRight="@dimen/dialog_padding_right"
        android:paddingTop="@dimen/dialog_padding_top">

        <com.dyhpoon.fodex.view.RobotoMediumTextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/backgroundDimWhite"
            android:paddingLeft="3dp"
            android:textColor="@android:color/black"
            android:textSize="20dip"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view"
            android:layout_marginTop="8dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_lower_part_margin_bottom"
        android:layout_marginTop="@dimen/dialog_lower_part_margin_top"
        android:background="@color/backgroundDimWhite"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:text="@string/button_cancel"
            android:textColor="@color/buttonTextColor" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:text="@string/button_add"
            android:textColor="@color/buttonTextColor" />

    </LinearLayout>

</LinearLayout>
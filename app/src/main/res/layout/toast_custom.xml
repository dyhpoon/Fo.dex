<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/toast_corner_radius">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/toast_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/toast_image_size"
                android:layout_height="@dimen/toast_image_size"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:scaleType="fitXY" />

            <com.dyhpoon.fodex.view.RobotoRegularTextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundDimWhite"
                android:textSize="@dimen/toast_text_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>